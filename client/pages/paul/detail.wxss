/* pages/paul/detail.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.match {
  width: 700rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  box-sizing: border-box;
  height: 250rpx;
  padding: 20rpx;
  align-items: center;
  border-radius: 24rpx;
  margin: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}

.info {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: space-around;
  height: 100%;
  width: 320rpx;
}

.paulStat {
  width: 670rpx;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-end;
  border-bottom: 2rpx solid #b0b0b0;
  margin: 20rpx 0 30rpx 0;
  box-sizing: border-box;
}

.block {
  width: 150rpx;
  height: 0;
  border-radius: 10rpx 10rpx 0 0;
  transition: height 1s;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.block-home {
  background-color: #f76260;
}

.block-draw {
  background-color: #2cc17b;
}

.block-away {
  background-color: #376cca;
}

.paulTop {
  margin: 10rpx 0 20rpx 0;
  width: 700rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.item-paulTop {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  font-size: 30rpx;
}

.score {
  width: 100rpx;
  text-align: center;
}

.bar {
  height: 12rpx;
  width: 0;
  transition: width 1s;
  border-radius: 6rpx;
  background-color: silver;
}

.color-bar-1 {
  background-color: #e84c3d;
}

.color-bar-2 {
  background-color: #e77e23;
}

.color-bar-3 {
  background-color: #f1c40f;
}

.title{
  font-size: 32rpx;
  border-bottom: 2rpx solid #b0b0b0;
  line-height: 2;
  margin-bottom: 20rpx;
}

.btn-home{
  width:90rpx;
  height:90rpx;
  position: fixed;
  bottom: 40rpx;
  right:40rpx;
  /* background-color: red; */
  padding: 15rpx 15rpx 20rpx 15rpx;
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}

.btn-reload {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
   background-color: #fff; 
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  opacity: 0.6;
}

.btn-reload_offset{
  bottom: 150rpx;
}
