/* pages/paul/index.wxss */

.scroll-content {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  /* border: 1px solid red;  */
}

.item-match {
  width: 700rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  box-sizing: border-box;
  height: 200rpx;
  padding: 20rpx;
  align-items: center;
  border-radius: 24rpx;
  margin: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}

.info {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  width: 320rpx;
}

.tip {
  position: absolute;
  top: 100rpx;
  right: 15rpx;
}

.noMatch {
  font-size: 28rpx;
  color: #b0b0b0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 800rpx;
}

.btn-reload {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
   background-color: #fff; 
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  opacity: 0.6;
}
