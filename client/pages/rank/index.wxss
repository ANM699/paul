/* pages/rank/index.wxss */

.scroll-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.color-score-3 {
  color: #2cc17b;
}

.color-score-1 {
  color: #ffbe00;
}

.color-score-0 {
  color: #f76260;
}

.item-rank {
  width: 750rpx;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ccc;
  font-size: 32rpx;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
  align-items: center;
}

.title-rank {
  width: 750rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  background: #f7f7f7;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  box-sizing: border-box;
  color: darkgray;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}

.tip {
  position: absolute;
  top: 86rpx;
  left: 82rpx;
}

.border {
  border: 1px solid red;
}

.cell {
  width: 75rpx;
  text-align: center;
  flex-shrink: 0;
  /* border: 1px solid red; */
}

.cell-user {
  flex-grow: 1;
}

.nickname {
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space:nowrap; */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.avatar {
  width: 75rpx;
  height: 75rpx;
  margin: 0 10rpx;
  border-radius: 50%;
  flex-shrink: 0;
  overflow: hidden;
  display: block;
}

.male {
  border: 4rpx solid #3784fe;
}

.female {
  border: 4rpx solid #ff358d;
}

.sum {
  font-weight: bold;
}

.color-no-1 {
  color: #e84c3d;
}

.color-no-2 {
  color: #e77e23;
}

.color-no-3 {
  color: #f1c40f;
}

.myRank {
  width: 750rpx;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  background-color: #fff;
}

.gender {
  width: 25rpx;
  height: 25rpx;
  align-self: flex-end;
  position: absolute;
  left: 150rpx;
}

.btn-reload {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
   background-color: #fff; 
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  opacity: 0.6;
}