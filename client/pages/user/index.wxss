/* pages/user/index.wxss */

.container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 550rpx;
}

.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.detail {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  font-size: 55rpx;
  /* border: 1px solid red; */
}

.block {
  margin: 30rpx 0;
}

.avatar {
  margin: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  display: block;
}

.nickname {
  font-size: 30rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.chart {
  width: 580rpx;
  height: 100%;
}

.color-score-3 {
  color: #2cc17b;
}

.color-score-1 {
  color: #ffbe00;
}

.color-score-0 {
  color: #f76260;
}

.sub {
  font-size: 25rpx;
}

.tip {
  position: absolute;
  top: 50rpx;
  right: 50rpx;
}

.btn-log {
  font-size: 30rpx;
  line-height: unset;
  background-color: unset;
  margin: unset;
  padding: unset;
}

.btn-log::after {
  display: none;
}

.btn-contact{
  margin: 0 15rpx;
}

.btn-reload {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
   background-color: #fff; 
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  opacity: 0.6;
}